+/// Update terminal colors at runtime
+pub fn setColors(ptr: ?*anyopaque, config_: ?*const GhosttyTerminalConfig) callconv(.c) void {
+    const wrapper: *TerminalWrapper = @ptrCast(@alignCast(ptr orelse return));
+    const cfg = config_ orelse return;
+
+    // Update foreground color
+    if (cfg.fg_color != 0) {
+        const rgb = color.RGB{
+            .r = @truncate((cfg.fg_color >> 16) & 0xFF),
+            .g = @truncate((cfg.fg_color >> 8) & 0xFF),
+            .b = @truncate(cfg.fg_color & 0xFF),
+        };
+        wrapper.terminal.colors.foreground = color.DynamicRGB.init(rgb);
+    }
+
+    // Update background color
+    if (cfg.bg_color != 0) {
+        const rgb = color.RGB{
+            .r = @truncate((cfg.bg_color >> 16) & 0xFF),
+            .g = @truncate((cfg.bg_color >> 8) & 0xFF),
+            .b = @truncate(cfg.bg_color & 0xFF),
+        };
+        wrapper.terminal.colors.background = color.DynamicRGB.init(rgb);
+    }
+
+    // Update cursor color
+    if (cfg.cursor_color != 0) {
+        const rgb = color.RGB{
+            .r = @truncate((cfg.cursor_color >> 16) & 0xFF),
+            .g = @truncate((cfg.cursor_color >> 8) & 0xFF),
+            .b = @truncate(cfg.cursor_color & 0xFF),
+        };
+        wrapper.terminal.colors.cursor = color.DynamicRGB.init(rgb);
+    }
+
+    // Update palette colors
+    for (cfg.palette, 0..) |palette_color, i| {
+        if (palette_color != 0) {
+            const rgb = color.RGB{
+                .r = @truncate((palette_color >> 16) & 0xFF),
+                .g = @truncate((palette_color >> 8) & 0xFF),
+                .b = @truncate(palette_color & 0xFF),
+            };
+            wrapper.terminal.colors.palette.set(@intCast(i), rgb);
+        }
+    }
+
+    // Force full redraw by deiniting and reiniting render state
+    wrapper.render_state.deinit(wrapper.alloc);
+    wrapper.render_state = RenderState.empty;
+}
